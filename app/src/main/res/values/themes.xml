<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgrifyMAD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_tertiary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AgrifyMAD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
<!--        &lt;!&ndash; Customize color of navigation drawer icon and back arrow &ndash;&gt;-->
<!--        <item name="colorControlNormal">@color/white</item>-->
<!--    </style>-->

    <style name="MyRatingBar" parent="@android:style/TextAppearance">

        <!--non selected star color-->
        <item name="colorControlNormal">#4D000000</item>

        <!--selected star color-->
        <item name="colorControlActivated">@color/dialog_color_1</item>

        <!-- Status bar color. -->
        <item name="color">?attr/color</item>

    </style>

    <style name="Theme.AgrifyMAD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.AgrifyMAD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>